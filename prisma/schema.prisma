generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}

model books {
  book_number      BigInt  @id
  title            String?
  author           String?
  subtitle         String?
  publisher        String?
  category_number  String?
  volume           String?
  incoming_date    String?
  isbn             BigInt?
  title_kana       String?
  author_kana      String?
}

model news{
  date String @id
  news String
}

model history {
  id               BigInt @id @default(autoincrement())
  book_number      BigInt
  user_id          String
  date             DateTime
}
